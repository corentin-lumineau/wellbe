<%= render "shared/navbar_global" %>

<!-- div centrale -->
<div class="centrale" >
  <div class="button-area flex-c-c">
    <button id="go" class="btn-1">COMMENCER </button>
  </div>
  <div id="init" class="d-none">
    <div class="chrono-area">
      <div class="timer-group">
        <div class="timer total">
          <div class="half-circle left">
            <span id="total-left" class="animated"></span>
          </div>
          <div class="half-circle right">
            <span id="total-right" class="animated"></span>
          </div>
        </div>
        <div class="timer period">
          <div class="half-circle left">
            <span id="period-left" class="animated"></span>
          </div>
          <div class="half-circle right">
            <span id="period-right" class="animated"></span>
          </div>
        </div>
        <div class="clock">
          <h2 id="subtitle">Exercice 1</h2>
          <p id="clock-text" data-times="<%= @times %>" data-names="<%= @names %>">00:10</p>
        </div>
      </div>
    </div>

    <%= render "shared/pop_up_session" %>

    <div>
      <div class="picto-area flex-col" id="gif">
        <% @images.each_with_index do |img, i| %>
          <%= cl_image_tag img, data: { exercise_name: @names[i] } %>
        <% end %>
        <%= link_to "QUITTER LA SESSION", sessions_choice_path, id: "quitter-session", class: "btn-2 d-none"  %>
      </div>
    </div>
  </div>


  <div class="zoom-area">
    <div id='local-media' data-twilio-token="<%= current_user.read_twilio_token %>" data-room-name="<%= @session.room_name %>">
    </div>
  </div>

</div>

